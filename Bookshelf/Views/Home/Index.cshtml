@model IEnumerable<Bookshelf.ViewModels.BookViewModel>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Book</title>
</head>
<body>
    <table>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Genre</td>
                <td>@Html.ActionLink("Details", "Details", new { id = book.Id })</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id = book.Id })</td>
            </tr>
        }
    </table>
</body>
</html>